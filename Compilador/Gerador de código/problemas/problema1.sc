/* Problema 1: Avaliar a expressao x^2 - y + c */

/* Variaveis */
float x;
float y;
int c;
float resultado;

/* Definicao de valores fixos */
x := 5.5;
y := 2.25;
c := 10;

/* Mostra os dados iniciais */
echo("--- Dados de Entrada ---");
echo(x);
echo(y);
echo(c);

/* Calculo: potencia, subtracao e soma */
resultado := (x^2) - y + c;

echo("--- Resultado ---");
echo(resultado);